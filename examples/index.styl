margin-window = 0.5rem
color-text = rgba(#fff, 0.7)
color-link = rgba(#fff, 0.5)
background-color = rgba(#000, 0.3)

body
  display flex
  align-items flex-start
  margin 0

a
  text-decoration none
  color color-link

  &:hover
    text-decoration underline
    color color-text

header
  overflow auto
  box-sizing border-box
  position fixed
  top margin-window
  left margin-window
  z-index 1
  max-height 'calc(100% - %s)' % (margin-window * 2)
  margin auto
  padding 0.5rem
  background-color background-color
  color color-text

nav
  ul
    margin 0

  a
    padding 0.1em 0.2em

    &.-current
      pointer-events none
      text-decoration none
      outline solid 1px color-text
      background-color color-text
      color #000

h1,
h2
  margin 0
  font-size 1rem
  font-weight normal

h1
  margin-bottom 0.5em

h2
  margin-top 0.5em

#example
  position absolute
  top 0
  left 0
  width 100%
  height 100%

#code
  position absolute
  bottom margin-window
  right margin-window
  z-index 2
  padding 0 0.3em
  background-color background-color
